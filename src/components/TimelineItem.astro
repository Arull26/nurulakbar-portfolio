---
// src/components/TimelineItem.astro
const { date, title, company, description, isTech = false, link, certificateLink } = Astro.props;
---

<li class="mb-10 ml-6">
    <span class={`absolute flex items-center justify-center w-6 h-6 rounded-full -left-3 ring-8 ring-white ${isTech ? 'bg-green-200 text-green-700 ring-green-50' : 'bg-indigo-200 text-indigo-700 ring-indigo-50'}`}>
        {isTech ? (
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>
        ) : (
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4v4m-6 4h12a2 2 0 002-2v-4a2 2 0 00-2-2H6a2 2 0 00-2 2v4a2 2 0 002 2z" /></svg>
        )}
    </span>

    <h3 class={`flex items-center mb-1 text-xl font-semibold ${isTech ? 'text-green-700' : 'text-indigo-700'}`}>
        {title}
        <span class={`ml-3 text-sm font-medium mr-2 px-2.5 py-0.5 rounded ${isTech ? 'bg-green-100 text-green-800' : 'bg-indigo-100 text-indigo-800'}`}>
            {company}
        </span>
    </h3>
    
    <time class="block mb-2 text-sm font-normal leading-none text-gray-500">
        {date}
    </time>
    
    <p class="text-base font-normal text-gray-700 mb-4">
        {description}
    </p>

    <div class="flex flex-wrap space-x-4">
        {certificateLink && (
            <a 
                href={certificateLink} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="inline-flex items-center text-sm font-semibold text-indigo-600 hover:text-indigo-800 transition duration-300 border-b border-dashed border-indigo-600"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
                Download Paklaring
            </a>
        )}

        {link && (
            <a href={link} target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-sm font-semibold text-green-600 hover:text-green-800 transition duration-300 border-b border-dashed border-green-600">
                Lihat Proyek
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
            </a>
        )}
    </div>
</li>